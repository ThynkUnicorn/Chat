{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs20.x" }
    }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/backend/api/chat.js" }
  ],
  "root": "frontend"            // ⬅︎  only if you want Vercel to build the React app
}
